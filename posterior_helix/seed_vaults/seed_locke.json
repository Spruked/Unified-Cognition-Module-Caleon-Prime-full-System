    },
    {
      "id": "epi:sensation",
      "term": "Sensation",
      "type": "process",
      "definition": "Knowledge gained from external objects via the senses. Primary source of simple ideas from the physical world.",
      "source_id": "WD:Q542857",
      "reference_urls": ["https://en.wikipedia.org/wiki/Empiricism"],
      "examples": ["Seeing color red", "Feeling heat", "Hearing sound"],
