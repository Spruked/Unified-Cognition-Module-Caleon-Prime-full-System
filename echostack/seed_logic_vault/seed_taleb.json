      "reference_urls": ["https://en.wikipedia.org/wiki/Ludic_fallacy"],
      "examples": ["Financial models ignoring black swans", "War games vs real warfare", "Lab experiments vs field conditions"],
      "related_ids": ["risk:black_swan", "risk:overconfidence"]
    },
