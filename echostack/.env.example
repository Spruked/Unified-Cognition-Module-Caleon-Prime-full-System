# EchoStack Environment Configuration
# Copy this file to .env and update values as needed

# Application Settings
ECHOSTACK_ENV=development
ECHOSTACK_LOG_LEVEL=INFO
PYTHONPATH=/app

# Database Configuration
POSTGRES_DB=echostack
POSTGRES_USER=echostack
POSTGRES_PASSWORD=secure_password_2025
POSTGRES_HOST=echostack_db
POSTGRES_PORT=5432

# Redis Configuration
REDIS_URL=redis://echostack_redis:6379/0

# Telemetry Configuration
TELEMETRY_PATH=/app/data/telemetry.json
TELEMETRY_RETENTION_DAYS=30

# Alert Configuration
ALERT_EMAIL_ENABLED=false
ALERT_EMAIL_SMTP_SERVER=smtp.gmail.com
ALERT_EMAIL_SMTP_PORT=587
ALERT_EMAIL_USERNAME=your-email@gmail.com
ALERT_EMAIL_PASSWORD=your-app-password
ALERT_EMAIL_FROM=echostack@yourdomain.com
ALERT_EMAIL_TO=admin@yourdomain.com

# Security
SECRET_KEY=your-secret-key-here-change-in-production
API_KEY=your-api-key-here

# Monitoring
PROMETHEUS_ENABLED=true
GRAFANA_ADMIN_PASSWORD=admin2025

# Vault Configuration
VAULT_SYNC_INTERVAL=300
VAULT_COMPLIANCE_CHECK_INTERVAL=3600

# Performance Tuning
MAX_WORKERS=4
REQUEST_TIMEOUT=30
MEMORY_LIMIT=512m
CPU_LIMIT=0.5