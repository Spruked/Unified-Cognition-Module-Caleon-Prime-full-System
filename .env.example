# Production Environment Variables
# Copy this to .env and fill in production values

# Database
POSTGRES_DB=cortex_db_prod
POSTGRES_USER=cortex_user_prod
POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD

# Redis
REDIS_PASSWORD=CHANGE_THIS_STRONG_PASSWORD

# MongoDB
MONGO_INITDB_ROOT_USERNAME=mongo_admin
MONGO_INITDB_ROOT_PASSWORD=CHANGE_THIS_STRONG_PASSWORD
MONGO_INITDB_DATABASE=vallm_db_prod

# API Keys and Secrets
VAULT_API_KEY=CHANGE_THIS_API_KEY
OLLAMA_ENDPOINT=http://ollama:11434
JWT_SECRET_KEY=CHANGE_THIS_JWT_SECRET

# Application Settings
ENVIRONMENT=production
LOG_LEVEL=INFO
DEBUG=false

# Voice and TTS
TTS_MODEL=tts_models/en/ljspeech/tacotron2-DDC
VOICE_CONSENT_TIMEOUT=30

# Security
CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
ALLOWED_HOSTS=yourdomain.com,api.yourdomain.com

# Monitoring
SENTRY_DSN=your_sentry_dsn_here
PROMETHEUS_METRICS=true

# External Services
GOOGLE_SPEECH_API_KEY=your_google_speech_api_key
OPENAI_API_KEY=your_openai_api_key_if_needed